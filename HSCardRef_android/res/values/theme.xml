<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.BlackBackground.NoTitle" parent="android:Theme">
        <!-- don't use @null for android:windowBackground. otherwise background will not be repainted, and ListView will suffer problem -->
        <item name="android:windowBackground">@color/black</item>                             
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="Theme.ContextMenuActivity" parent="android:Theme.Dialog">
         <item name="android:textColor">@color/black</item>
         <item name="android:background">@color/grey</item>
    </style>
    
    <style name="Theme.FilterDialog" parent="android:Theme.Dialog">
         <item name="android:windowFrame">@null</item>
         <item name="android:windowIsTranslucent">true</item>
         <item name="android:windowBackground">@color/transparent</item>
         <item name="android:windowNoTitle">true</item>
         <item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>
    </style>

</resources>
